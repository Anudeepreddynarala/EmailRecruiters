# EmailRecruiters Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Apollo.io API Key (REQUIRED)
# Get your API key from: https://app.apollo.io/#/settings/integrations/api
# Note: Master API key required for sequence operations
APOLLO_API_KEY=your_apollo_api_key_here

# Google Gemini API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Jina AI API Key (REQUIRED)
# Get your API key from: https://jina.ai/
JINA_API_KEY=your_jina_api_key_here

# =============================================================================
# SEQUENCE CONFIGURATION (Set via /setup command)
# =============================================================================

# Default sequence for job applications
# Run /setup to configure this interactively
DEFAULT_SEQUENCE_NAME=
DEFAULT_SEQUENCE_ID=
DEFAULT_EMAIL_ACCOUNT_ID=

# =============================================================================
# DEFAULT SETTINGS (Optional)
# =============================================================================

# Maximum number of contacts to find per role (default: 3)
DEFAULT_MAX_CONTACTS_PER_ROLE=3

# Number of contacts to enrich/unlock emails for (default: 5)
DEFAULT_ENRICH_COUNT=5
